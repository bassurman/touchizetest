                <theme_type>classic</theme_type>
            </touchize_commmerce_design>
            <touchize_commmerce_cdn>
                <use_cdn_for_client>1</use_cdn_for_client>
                <client_cdn_path>https://d2kt9xhiosnf0k.cloudfront.net</client_cdn_path>
            </touchize_commmerce_cdn>
            <touchize_commmerce_category>
                <enable_limit>1</enable_limit>
                <items_limit>100</items_limit>
