        <touchize_commmerce_config>
            <touchize_commmerce_setup>
                <display_devices>3</display_devices>
                <options_title>Select option</options_title>
                <selection_title>Option selections</selection_title>
                <features_label>Features</features_label>
                <back_button_title>Back</back_button_title>
            </touchize_commmerce_setup>
